@model ELearningUI.Models.Grade

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Grade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GradeInLetter" class="control-label">Grade In Letter</label>
                <input asp-for="GradeInLetter" class="form-control" />
                <span asp-validation-for="GradeInLetter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseId" class="control-label">Course Id</label>
                <select asp-for="CourseId" class ="form-control" asp-items="ViewBag.CourseId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AssessmentId" class="control-label">Assessment Id</label>
                <select asp-for="AssessmentId" class ="form-control" asp-items="ViewBag.AssessmentId"></select>
            </div>
            <div class="form-group">

                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-outline-secondary"asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div>
   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
