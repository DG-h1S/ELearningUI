@model ELearningUI.Models.Exam

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Exam</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ExamId" class="control-label">Exam Id</label>
                <input asp-for="ExamId" class="form-control" />
                <span asp-validation-for="ExamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeStart" class="control-label">Time Start</label>
                <input asp-for="TimeStart" class="form-control" />
                <span asp-validation-for="TimeStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeClose" class="control-label">Time Close</label>
                <input asp-for="TimeClose" class="form-control" />
                <span asp-validation-for="TimeClose" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeLimit" class="control-label">Time Limit</label>
                <input asp-for="TimeLimit" class="form-control" />
                <span asp-validation-for="TimeLimit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExamCode" class="control-label">Exam Code</label>
                <input asp-for="ExamCode" class="form-control" />
                <span asp-validation-for="ExamCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-outline-secondary"asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
